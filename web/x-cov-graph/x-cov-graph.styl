x-cov-graph
  display block
  position relative

x-cov-graph .leaf circle
  fill-opacity .65
  stroke #eee
  stroke-width 4px

x-cov-graph .leaf-ok circle
  fill green

x-cov-graph .leaf-warn circle
  fill yellow

x-cov-graph .leaf-bad circle
  fill red

x-cov-graph .leaf-nocov circle
  fill white

x-cov-graph text
  display none

x-cov-graph .details
  position absolute
  padding 1em
  top 0
  right 0
  text-align right
  opacity 0.65
  color #444
