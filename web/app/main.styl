body
  font-family "Helvetica"
  text-align center
  background #eee
  color #222
  margin 0

.legend
  position absolute
  left 1em
  top 1em
  opacity 0.65
  border-radius 5px
  overflow hidden

.legend label
  display block
  padding .5em 1em
  color #333

.legend label.ok
  background green

.legend label.warn
  background yellow

.legend label.bad
  background red

.legend label.nocov
  background white
